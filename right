<!DOCTYPE html>
<html>
<head>
  <title>泣ける邦画っぽいタイトル生成ジェネレータ</title>
  <script>
    var words = ["君", "あなた", "世界", "月", "月夜", "月光", "花", "桜", "向日葵", "花束", "咲く", "終わる", "出会う", "降る", "想う", "消える", "恋", "愛", "瞳", "胸", "雨", "いつか", "すべての", "あの日", "日々", "明日", "今日", "昨日", "夢", "今夜", "春", "夏", "秋", "冬", "色", "青", "始まる"];
    var connectors = ["に", "の", "を", "は", "が"];

    function generateRandomCombination() {
      var numCombinations = 1;

      var result = document.getElementById("result");
      result.innerHTML = "";

      for (var i = 0; i < numCombinations; i++) {
        var numWords = Math.floor(Math.random() * 2) + 3;
        var randomCombination = "";

        for (var j = 0; j < numWords; j++) {
          var randomIndex = Math.floor(Math.random() * words.length);
          randomCombination += words[randomIndex];

          if (j < numWords - 1) {
            var randomConnectorIndex = Math.floor(Math.random() * connectors.length);
            randomCombination += connectors[randomConnectorIndex];
          }
        }

        result.innerHTML += randomCombination + "<br>";
      }
    }
  </script>
</head>
<body>
  <h1>泣ける邦画っぽいタイトル生成ジェネレータ</h1>
  
  <button onclick="generateRandomCombination()">邦題生成</button>
  <p id="result"></p>
</body>
</html>
